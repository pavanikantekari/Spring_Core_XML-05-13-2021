<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="address" class="com.ojas.spring.SpringCoreXML.model.EmpAddress">
		<constructor-arg value="Warangal"></constructor-arg>
		<constructor-arg value="India"></constructor-arg>
		<constructor-arg value="172"></constructor-arg>
	</bean>



	<bean id="company" class="com.ojas.spring.SpringCoreXML.model.EmpCompany">
		<constructor-arg value="Ojas"></constructor-arg>
		<constructor-arg value="Hyd"></constructor-arg>
	</bean>

	<bean id="Emp" class="com.ojas.spring.SpringCoreXML.model.EmployeeConstr">
		<constructor-arg value="21074"></constructor-arg>
		<constructor-arg value="Pavani"></constructor-arg>
		<constructor-arg>
			<ref bean="company" />
		</constructor-arg>
		<constructor-arg>
			<ref bean="address" />
		</constructor-arg>
	</bean>



</beans>